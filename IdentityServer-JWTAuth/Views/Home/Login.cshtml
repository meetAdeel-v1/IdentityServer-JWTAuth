@model DataAccessLayer.ViewModels.Login

@{
    ViewData["Title"] = "Login";
    //Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid">
        
        <div class="row justify-content-center mt-md-5">
            <div class="col-md-4">
                <br />
                <h4>Login</h4>
                <hr />
                <form asp-action="Login" id="loginForm" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                        @*<span>Please correct the following errors</span>*@
                    </div>
                    <div>
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @*<label for="Email" class="control-label"></label>*@
                        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label" })
                        <input asp-for="Email" name="Email" class="form-control" />
                        @*<span asp-validation-for="Email" class="text-danger"></span>*@
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @*<label asp-for="Password" class="control-label"></label>*@
                        @Html.LabelFor(m => m.Password)
                        <input asp-for="Password" name="Password" type="password" class="form-control" />
                        @*<span asp-validation-for="Password" class="text-danger"></span>*@
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" id="btnLogin" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>