@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <br />
            <div>
                <img src="@Url.Action("RenderImage", new { id = 111})" alt="No Image found" style="vertical-align:middle;width:100px;height:100px;border-radius:50%;" />
                <label>Select profile picture to update</label>
            </div>
            <br />

            <form class="col-xs-12" method="post" action="/Common/fileUpload" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="file" class="form-control" name="file" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary col-xs-12">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>

